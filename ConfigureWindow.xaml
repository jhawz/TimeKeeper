<Window x:Class="TimeKeeper.ConfigureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConfigureWindow" Height="300" Width="400">
    <Grid Background="Silver">
        <Label Content="Sharepoint URL:" HorizontalAlignment="center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="SharepointUrlTextBox" HorizontalAlignment="Center" Height="23" Margin="0,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="350" TextChanged="TextBox_TextChanged"/>
        <Button Content="Save" HorizontalAlignment="Center" Margin="-100,0,0,20" VerticalAlignment="Bottom" Width="74" Click="Save_Button_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Center" Margin="100,0,0,20" VerticalAlignment="Bottom" Width="75" Click="Cancel_Button_Click"/>

    </Grid>
</Window>
